def load_macros(schema):
    macra = []
    path = 'C:\Users\PC\Desktop\DIETY\ '.replace(' ', '') + schema + '.txt'
    print path
    with open(path, 'r') as f:
        for line in f:
            macros.append(float(line[0:2]))
            macros.append(float(line[3:5]))
            macros.append(float(line[6:8]))
            break
    return macra